<p id="notice"><%= notice %></p>

<h1>My Shops</h1>

<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>店名</th>
      <th>ジャンル</th>
      <th>住所</th>
      <th>お気に入り商品</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= link_to shop.user.name, shop.user %></td>
        <td><%= link_to shop.name, shop %></td>
        <td><%= shop.genre %></td>
        <td><%= shop.address %></td>
        <td><%= shop.likey %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @shops %>

<br>

<%= link_to '新規投稿', new_shop_path, class: 'btn btn-primary' %>
