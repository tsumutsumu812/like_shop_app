<%= form_with(model: shop, local: true) do |form| %>
  <% if shop.errors.any? %>
    <div id="error_explanation">
      <%#<h2><%= pluralize(shop.errors.count, "error") %> 
      <%#>prohibited this shop from being saved:</h2>%>

      <ul>
      <% shop.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "店名" %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :genre, "ジャンル" %>
    <%= form.text_field :genre %>
  </div>

  <div class="field">
    <%= form.label :address, "住所" %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :likey, "お気に入り" %>
    <%= form.text_field :likey %>
  </div>

  <div class="field">
    <%= form.label :description, "詳細"%>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :url, "URL"%>
    <%= form.text_field :url %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
