<% provide(:title, "ログイン") %>
<h1>ログイン</h1>
<%= form_with scope: :session, local: true do |f| %>
  <div class="form-group">
    <%=f.label :email, "メールアドレス"%>
    <%=f.email_field :email, class:"form-control col-sm-4", id: "session-email"%>
  </div>
  <div class="form-group">
    <%=f.label :password, "パスワード"%>
    <%=f.password_field :password, class:"form-control col-sm-4", id: "session-password"%>
  </div>
  <%= f.submit "ログイン", class:"btn btn-primary login_btn" %>
<% end %>

