<% provide(:title, "ユーザー検索") %>
<div class="users">
  <div class="users_header">
    <h1>アカウント一覧</h1>
    <%= search_form_for @q, class:"mb-5" do |f| %>
      <div class="search_form">  
        <div class="form-group row">
          <%= f.label :name_cont, "アカウント名検索", class: "col-sm-2 col-form-label" %>
          <div class="col-sm-3">
            <%= f.search_field :name_cont, class: "form-control" %>
          </div>
          <div class="form-group col-sm-1">
            <%= f.submit class: "btn btn-outline-primary" %>
          </div>
        </div>  
      </div>
    <% end %>
  </div>

  <%#= page_entries_info @users%>

  <div class="user_index">
    <% @users.each do |user| %>
      <div class="user_container">
        <div class="icon_container">
          <% if user.picture? %>
            <%= link_to image_tag(user.picture.url, class:"gravatar icon"), user%>
          <% else %>
            <%= link_to gravatar_for(user), user, class: "icon" %>
          <% end %>
        </div>
        <div class="user_text">
          <div class="users_name"><%= link_to user.name, user %></div>
          <div><%= user.introduction %></div>
        </div>
      </div>
    <% end %>
  </div>
  <%= paginate @users %>
</div>

