<div class="user_info">
  <div>
    <div class="profile"><%= gravatar_for @user %></div>
    <h3 class="user_name"><%=@user.name%></h3>
  </div>
  <p class="introduction"><%=@user.introduction%></p>
  <div class="setting">
    <% if current_user %>
      <%if @user.id == current_user.id || current_user.admin?%>
        <button class="btn btn-info">
          <%= link_to "ユーザー設定", edit_user_url(@user) %>
        </button>
      <%end%>
    <% end %>
  </div>
</div>

<section class="stats">
  <%= render 'shared/stats' %>
</section>
<%= render 'follow_form' if current_user%>


<div class="post_box">
  <div>
    <h4 class="post_header">投稿一覧</h4>
    <p><%= @user.shops.count %>件</p>
  </div>
  <% @user.shops.each do |shop| %>
    <ul style="list-style:none;">
      <li><%= shop.user.name %></li>
      <li><%= link_to shop.name, shop %></li>
    </ul>
  <% end %>
</div>

<div class="like-box">
  <h4>いいねした投稿</h4>
  <% @likes.each do |like| %>
    <div>
      <% shop = Shop.find_by(id: like.shop_id)%>
      <%= link_to(shop.user.name, "/users/#{shop.user.id}") %>
      <%= link_to(shop.name, "/shops/#{shop.id}") %>
    </div>
  <% end %>
</div>

